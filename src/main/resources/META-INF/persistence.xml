<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence 
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="sistemaecommerce" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>br.edu.unicesumar.sistemaECommerce.model.Produto</class>
        <class>br.edu.unicesumar.sistemaECommerce.model.Cliente</class>
        <class>br.edu.unicesumar.sistemaECommerce.model.Categoria</class>
        <class>br.edu.unicesumar.sistemaECommerce.model.Endereco</class>
        <class>br.edu.unicesumar.sistemaECommerce.model.Carrinho</class>
        <class>br.edu.unicesumar.sistemaECommerce.model.ItemCarrinho</class>
        <class>br.edu.unicesumar.sistemaECommerce.model.ItemPedido</class>
        <class>br.edu.unicesumar.sistemaECommerce.model.Pedido</class>
        <properties>
            <!-- Conexão com o banco MariaDB -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sistemaecommerce"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            

            <!-- Dialeto Hibernate para MariaDB -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>

            <!-- Criação automática das tabelas -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
